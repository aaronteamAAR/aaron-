---
export interface Props {
	title?: string;
}

const { title } = Astro.props;
import { inject } from '@vercel/analytics';
import Meta from '../components/MetaTag.astro'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<Meta />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="mx-auto">
		<slot />
	</body>
	<script defer src="/_vercel/insights/script.js"></script>
</html>
<style is:global>
	:root{
    --dark-black: black;
    --light-dark:#666666;
    --font-size-l: 20px;
    --font-size-m: 17px;
    --font-size-xl: 27px;
    --font-size-xxl: 30px;
    --font-size-xxxl: 32px;
    --font-size-xxxxl: 42px;
    --font-size-xxxxxl: 65px;
    --font-size-xxxxxxl: 100px;
}
	*{
	font-family: 'Hanken Grotesk', sans-serif;
	box-sizing: border-box;
}
</style>
