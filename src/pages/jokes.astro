---
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';
import Header from '../components/Header.astro';
import '../styles/jokes.css'

// fetching jokes from jokes api 
const response = await fetch("https://official-joke-api.appspot.com/jokes/random")

const data = await response.json()
const jokesSetup = data.setup
const jokesPunchline = data.punchline
console.log(jokesSetup, jokesPunchline)

---


<Layout>
    <Logo />
    
    <Header links={[
        {
        href: '/blog',
        title: "Blog"
    },
    {
        href: 'https://github.com/aaronteamAAR/',
        title: "Projects"
    },
    {
        href:'/',
        title: "go back !"
    }
    ]
    } />

  <div class="flex flex-col text-center">
    <div class="justify-center  my-[12em]">
        <h1>{jokesSetup}</h1>
        <h2>{jokesPunchline}</h2>
    </div>

  </div>
</Layout>