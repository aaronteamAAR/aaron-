import { technologies } from "../utils/stacks";
import Logo from '../components/Logo.astro';
import Navbar from '../components/Navbar.astro';
import '../styles/main.css'


interface TechBadgeProps {
  name: string;
  imgSrc: string;
  altSrc: string;
  link: string;
}
---




<Layout title="	Home -> aaronspace.studio">
	<div class="flex flex-col-reverse justify-center md:flex-row justify-center items-center">
	
		<!-- content  -->
		<div class="w-[700px] mx-auto md:w-[800px]">
			<Logo />
			
			<Navbar links={[
				{
				href: '/blog',
				title: "Blog"
			},
			{
				href: 'https://github.com/aaronteamAAR/',
				title: "Projects"
			},
			{
				href:'/jokes',
				title: "jokes"
			}
			]
			}/>
		 <SpotifyNow  /> 
			<div class="mt-4 mx-auto text-left w-2/3 md:mx-0">
				<div class="font-semibold">yo i'm aaronüëãüèø</div>
				<h1 class="text-8xl font-bold mb-4 md:mb-8">software developer</h1>
				<span class="w-1/2 text-lightdark">
					"i'm 18, a backend developer with few years of experience working with various technologies, i play around with front-end too, i consider myself a <b>thinker</b>, i love psychology and i create some thought about life myself"
				</span>
			</div>


			<div class="flex flex-row pl-8 gap-12 md:flex-row justify-center items-center mt-10">
				<div class="w-1/3">
					<div class="">
						<img src="./images/design2.png" alt="design logo" width="160px">
					</div>
					<div class="w-40">
						<h3 class="w-full font-bold text-1xl mx-6 md:text-1xl">adventurous</h3>
						<span class="card_text text-lightdark">Trying out new things and learn from different experiences could possibly be a hobby for me , i derive joy in exploring repos and github and learning from each one.</span>
					</div>
				</div>
				<div class="w-1/3 mb-8">
					<div class="card_details">
						<img src="./images/design3.png" alt="design logo" width="160px">
					</div>
					<div class="w-40">
						<h3 class="w-full font-bold text-1xl mx-6">Ready to learn</h3>
						<span class="card_text text-lightdark">I'm always trying my very best to learn new concepts about literally any and everything i can lay my hands upon, <b>daily</b></span>
					</div>
				</div>
				<div class="w-1/3 mb-8">
					<div>
						<img src="./images/design1.png" alt="design logo" width="160px">
					</div>
					<div class="w-40 mb-8">
						<h3 class="font-bold w-full text-1xl mx-6">critical thinking</h3>
						<span class="text-lightdark">I posses the ability to think outside the box on issues am placed with, i like to view the world from different ascept and i don't cease to evolve</span>
					</div>
				</div>
			</div>
			<div>
				<h1 class="flex flex-row justify-center font-bold text-3xl">Various technologies i've played with!</h1>
			</div>
			<div
			class="grid grid-cols-2 gap-y-6 ml-[6.7em] md:grid-cols-3 md:gap-y-8 md:gap-x-4 mt-10"
		  >
			{
			  technologies.map((tech: TechBadgeProps) => (
				<a href={tech.link} class="cursor-pointer text-gray-300">
				  <TechBadge {...tech} />
